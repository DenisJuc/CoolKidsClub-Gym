<%- include ("../partials/header.ejs") %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Krona One';
        }

        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            background-color: #343a40;
            padding-top: 20px;
        }

        .sidebar a {
            padding: 15px;
            text-decoration: none;
            font-size: 18px;
            color: #ffffff;
            display: block;
        }

        .sidebar a:hover {
            background-color: #575d63;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>

    <div class="sidebar">
        <a href="#clients">Clients</a>
        <a href="#revenu">Revenu</a>
        <a href="#abonnements">Abonnements</a>
        <a href="#chart">Paiement Chart</a>
    </div>

    <div class="content">
        <div class="container mt-5">
            <h1 class="text-center">Admin Dashboard</h1>
            <div class="row mt-5" id="clients">
                <div class="col-md-12">
                    <h2>Clients</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Courriel</th>
                                <th>Number</th>
                                <th>Admin</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (Array.isArray(userDetails) && userDetails.length>= 0) { %>
                                <% userDetails.forEach(user=> { %>
                                    <tr>
                                        <td>
                                            <%= user.E_ID %>
                                        </td>
                                        <td>
                                            <%= user.E_NOM %>
                                        </td>
                                        <td>
                                            <%= user.E_COURRIEL %>
                                        </td>
                                        <td>
                                            <%= user.E_NUMBER %>
                                        </td>
                                        <td>
                                            <input type="checkbox" class="admin-checkbox"
                                                data-user-id="<%= user.E_ID %>" <%=user.isAdmin ? 'checked' : '' %>>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="5">Pas de Clients</td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mt-5" id="revenu">
                <div class="col-md-12">
                    <h2>Revenu</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID Produit</th>
                                <th>Purchase date uwu</th>
                                <th>Nom</th>
                                <th>Prix</th>
                                <th>Catégorie</th>
                                <th>Quantité</th>
                                <th>ID Utilisateur</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (Array.isArray(products) && products.length>= 0) { %>
                                <% products.forEach(product=> { %>
                                    <tr>
                                        <td>
                                            <%= product.E_IDPRODUIT %>
                                        </td>
                                        <td>
                                            <%= product.E_DATE_ACHAT %>
                                        </td>
                                        <td>
                                            <%= product.E_NOM %>
                                        </td>
                                        <td>
                                            <%= product.E_PRIX %>
                                        </td>
                                        <td>
                                            <%= product.E_CATEGORIE %>
                                        </td>
                                        <td>
                                            <%= product.E_QUANTITE %>
                                        </td>
                                        <td>
                                            <%= product.E_USER_ID %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="7">Pas de Produits</td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mt-5" id="abonnements">
                <div class="col-md-12">
                    <h2>Abonnements</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Date de début</th>
                                <th>Date de fin</th>
                                <th>Nom</th>
                                <th>Prix</th>
                                <th>Catégorie</th>
                                <th>Quantité</th>
                                <th>ID Utilisateur</th>
                                <th>Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (Array.isArray(subscriptions) && subscriptions.length>= 0) { %>
                                <% subscriptions.forEach(subscription=> { %>
                                    <tr>
                                        <td>
                                            <%= subscription._id %>
                                        </td>
                                        <td>
                                            <%= new Date(subscription.startDate).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= new Date(subscription.endDate).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= subscription.productName %>
                                        </td>
                                        <td>
                                            <%= subscription.price %>
                                        </td>
                                        <td>
                                            <%= subscription.category %>
                                        </td>
                                        <td>1</td>
                                        <td>
                                            <%= subscription.userId %>
                                        </td>
                                        <td>
                                            <%= subscription.status %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="9">Pas d'Abonnements</td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mt-5" id="chart">
                <div class="col-md-12">
                    <select id="timeframe">
                        <option value="7days">Last 7 Days</option>
                        <option value="30days">Last 30 Days</option>
                        <option value="1year">Last 1 Year</option>
                    </select>
                    <canvas id="myChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const timeframeSelect = document.getElementById('timeframe');
        const ctx = document.getElementById('myChart').getContext('2d');
        let myChart;

        function fetchChartData() {
            const timeframe = timeframeSelect.value;

            fetch(`/product-purchases?timeframe=${timeframe}`)
                .then(response => response.json())
                .then(data => {
                    const labels = data.labels;
                    const values = data.data;

                    myChart.data.labels = labels;
                    myChart.data.datasets[0].data = values;

                    myChart.update();
                })
                .catch(error => {
                    console.error('Error fetching chart data:', error);
                });
        }

        myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: [],
                datasets: [{
                    label: 'Produits Acheter',
                    data: [],
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        timeframeSelect.addEventListener('change', fetchChartData);
        fetchChartData();

        const checkboxes = document.querySelectorAll('.admin-checkbox');
        checkboxes.forEach(checkbox => {
            checkbox.addEventListener('change', function () {
                const userId = this.dataset.userId;
                const isAdmin = this.checked;

                fetch('/set-admin-status', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        userId: userId,
                        adminCheckbox: isAdmin ? 'on' : 'off'
                    })
                })
            });
        });
    </script>

    <%- include ("../partials/footer") %>